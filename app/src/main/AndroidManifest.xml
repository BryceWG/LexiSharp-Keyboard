<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 14+ 针对数据同步/下载类型前台服务权限（兼容不存在时忽略） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" tools:ignore="NewApi" />
    <!-- 悬浮球需要的系统悬浮窗权限（运行时在设置中授予） -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 通知权限,用于显示悬浮球语音识别状态 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 开机自启 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 若通过 ADB 授权可写入 Secure 设置，用于尝试自动开启无障碍（普通应用默认不会授予） -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" tools:ignore="ProtectedPermissions" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:localeConfig="@xml/locale_config"
        android:theme="@style/Theme.ASRKeyboard"
        tools:targetApi="33">

        <activity
            android:name=".ui.SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        
        <!-- 直接子设置页（无中间层） -->

        <activity
            android:name=".ui.settings.input.InputSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.settings.asr.AsrSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.settings.ai.AiPostSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.settings.other.OtherSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.settings.floating.FloatingSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.settings.backup.BackupSettingsActivity"
            android:exported="false" />

        <!-- 关于页面 -->
        <activity
            android:name=".ui.about.AboutActivity"
            android:exported="false" />

        <activity
            android:name=".ui.permission.PermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.ASRKeyboard.Transparent" />

        <activity
            android:name=".ui.ime.ImePickerActivity"
            android:exported="false"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.ASRKeyboard.PickerHost" />

        <service
            android:name=".ime.AsrKeyboardService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:theme="@style/Theme.ASRKeyboard.Ime"
            android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>



        <!-- 悬浮球语音识别服务 -->
        <service
            android:name=".ui.floating.FloatingAsrService"
            android:exported="false" />

        <!-- 模型下载/解压前台服务（支持并发任务） -->
        <service
            android:name=".ui.settings.asr.ModelDownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- 无障碍服务,用于文本插入 -->
        <service
            android:name=".ui.AsrAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- 开机启动接收器：根据偏好启动悬浮服务，并在具备权限时尝试开启无障碍 -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

    <queries>
        <intent>
            <action android:name="android.view.InputMethod" />
        </intent>
    </queries>
    
</manifest>
