<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ime_panel_height"
    android:background="@drawable/bg_keyboard_container"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- 状态文本 - 顶部 -->

    <!-- 第三行：标点符号和字母切换（从底部开始布局） -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_status_text"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="@string/status_idle"
        android:textColor="?attr/colorOnSurface"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 实时音频波形：位于状态栏与麦克风按钮之间 -->
    <com.brycewg.asrkb.ui.AudioWaveView
        android:id="@+id/audioWaveView"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/cd_audio_wave"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txtStatus"
        app:layout_constraintStart_toStartOf="@id/btnMic"
        app:layout_constraintEnd_toEndOf="@id/btnMic"
        app:layout_constraintBottom_toTopOf="@id/btnMic"/>

    <TextView
        android:id="@+id/btnPunct1"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_punct_btn_1"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPunct2"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/btnPunct2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_punct_btn_2"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPunct1"
        app:layout_constraintEnd_toStartOf="@id/btnPunct4" />

    <TextView
        android:id="@+id/btnPunct3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_punct_btn_3"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPunct5"
        app:layout_constraintEnd_toStartOf="@id/btnLetters" />

    <!-- 新增：第三行中部两个自定义符号键，位于麦克风左右侧 -->

    <TextView
        android:id="@+id/btnPunct4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_key_button"
        android:clickable="true"
        android:contentDescription="@string/cd_punct_btn_4"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:stateListAnimator="@animator/key_button_state_list"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPunct2"
        app:layout_constraintEnd_toStartOf="@id/btnPunct5" />

    <TextView
        android:id="@+id/btnPunct5"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_key_button"
        android:clickable="true"
        android:contentDescription="@string/cd_punct_btn_5"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:stateListAnimator="@animator/key_button_state_list"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPunct4"
        app:layout_constraintEnd_toStartOf="@id/btnPunct3" />

    <TextView
        android:id="@+id/btnLetters"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_letters_keyboard"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:text="@string/label_abc"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPunct3"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 第二行：设置、输入法切换、AI编辑、回车（在第三行上方10dp） -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_settings"
        android:clipToOutline="true"
        android:padding="10dp"
        android:src="@drawable/ic_settings"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnPunct1"
        app:layout_constraintStart_toStartOf="@id/btnPunct1"
        app:layout_constraintEnd_toEndOf="@id/btnPunct1" />

    <ImageButton
        android:id="@+id/btnImeSwitcher"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_switch_ime"
        android:clipToOutline="true"
        android:padding="10dp"
        android:src="@drawable/ic_keyboard"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnPunct2"
        app:layout_constraintStart_toStartOf="@id/btnPunct2"
        app:layout_constraintEnd_toEndOf="@id/btnPunct2" />

    <ImageButton
        android:id="@+id/btnAiEdit"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_ai_edit"
        android:clipToOutline="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_edit"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnPunct3"
        app:layout_constraintStart_toStartOf="@id/btnPunct3"
        app:layout_constraintEnd_toEndOf="@id/btnPunct3" />

    <ImageButton
        android:id="@+id/btnEnter"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_enter"
        android:clipToOutline="true"
        android:padding="10dp"
        android:src="@drawable/ic_enter"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnLetters"
        app:layout_constraintStart_toStartOf="@id/btnLetters"
        app:layout_constraintEnd_toEndOf="@id/btnLetters" />

    <!-- 第一行：提示词选择器、后处理、隐藏、退格（在第二行上方10dp） -->
    <ImageButton
        android:id="@+id/btnPromptPicker"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_prompt_picker"
        android:clipToOutline="true"
        android:padding="10dp"
        android:src="@drawable/ic_prompt"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="@id/btnPunct1"
        app:layout_constraintEnd_toEndOf="@id/btnPunct1" />

    <ImageButton
        android:id="@+id/btnPostproc"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_postproc_toggle"
        android:clipToOutline="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_magic"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnImeSwitcher"
        app:layout_constraintStart_toStartOf="@id/btnPunct2"
        app:layout_constraintEnd_toEndOf="@id/btnPunct2" />

    <ImageButton
        android:id="@+id/btnHide"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_hide"
        android:clipToOutline="true"
        android:padding="10dp"
        android:src="@drawable/ic_chevron_down"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnAiEdit"
        app:layout_constraintStart_toStartOf="@id/btnPunct3"
        app:layout_constraintEnd_toEndOf="@id/btnPunct3" />

    <ImageButton
        android:id="@+id/btnBackspace"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_key_button"
        android:contentDescription="@string/cd_backspace"
        android:clipToOutline="true"
        android:padding="10dp"
        android:src="@drawable/ic_backspace"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:stateListAnimator="@animator/key_button_state_list"
        android:tint="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/btnEnter"
        app:layout_constraintStart_toStartOf="@id/btnLetters"
        app:layout_constraintEnd_toEndOf="@id/btnLetters" />

    <!-- 麦克风按钮 - 整个面板正中间 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_mic"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:backgroundTint="@color/fab_mic_tint"
        app:elevation="0dp"
        app:fabCustomSize="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607"
        app:maxImageSize="40dp"
        app:pressedTranslationZ="0dp"
        app:srcCompat="@drawable/ic_mic"
        app:tint="?attr/colorOnPrimaryContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>
