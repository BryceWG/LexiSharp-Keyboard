<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:clipChildren="true"
    android:background="@drawable/bg_keyboard_container"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowTop"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageButton
            android:id="@+id/btnHide"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_hide"
            android:clipToOutline="true"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_down"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBackspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/btnPostproc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_postproc_toggle"
            android:clipToOutline="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_magic"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPromptPicker"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_backspace"
            android:clipToOutline="true"
            android:padding="6dp"
            android:src="@drawable/ic_backspace"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/btnPromptPicker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_prompt_picker"
            android:clipToOutline="true"
            android:padding="6dp"
            android:src="@drawable/ic_prompt"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:tint="?attr/colorOnSurfaceVariant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Middle function row moved to overlay to keep height unchanged -->

    <!-- Custom punctuation row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/btnPunct1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_punct_btn_1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnPunct2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_punct_btn_2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPunct1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnPunct3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_punct_btn_3"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPunct4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnPunct4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_punct_btn_4"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- Overlay: original function row placed around middle height without increasing total panel height -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:translationY="0dp">

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_settings"
            android:clipToOutline="true"
            android:padding="6dp"
            android:src="@drawable/ic_settings"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/btnImeSwitcher"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_switch_ime"
            android:clipToOutline="true"
            android:padding="6dp"
            android:src="@drawable/ic_keyboard"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnSettings"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/btnEnter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_enter"
            android:clipToOutline="true"
            android:padding="6dp"
            android:src="@drawable/ic_enter"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/btnAiEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_ai_edit"
            android:clipToOutline="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_edit"
            android:stateListAnimator="@animator/key_button_state_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEnter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/btnImeSwitcher"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="?attr/colorOnSurfaceVariant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd_mic"
            app:srcCompat="@drawable/ic_mic"
            app:backgroundTint="@color/fab_mic_tint"
            app:tint="?attr/colorOnPrimaryContainer"
            android:elevation="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            android:stateListAnimator="@null"
            app:fabCustomSize="72dp"
            app:maxImageSize="40dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/status_idle"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>
