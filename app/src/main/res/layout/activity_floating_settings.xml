<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titleCentered="true"
    app:title="@string/title_floating_settings" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">

      <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchFloatingSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_floating_switcher" />

      <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchFloatingAsr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_floating_asr" />

      <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchFloatingOnlyWhenImeVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_floating_only_when_ime_visible" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_floating_alpha" />

      <com.google.android.material.slider.Slider
        android:id="@+id/sliderFloatingAlpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:valueFrom="30"
        android:valueTo="100"
        android:stepSize="5" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_floating_size" />

      <com.google.android.material.slider.Slider
        android:id="@+id/sliderFloatingSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:valueFrom="28"
        android:valueTo="96"
        android:stepSize="4" />

      <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

      <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchFloatingWriteCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/label_floating_write_compat" />

      <TextView
        android:id="@+id/tvFloatingWriteCompatDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/darker_gray"
        android:text="@string/desc_floating_write_compat" />

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFloatingWriteCompatPkgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:helperText="@string/hint_floating_write_compat_pkgs">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etFloatingWriteCompatPkgs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/label_floating_write_compat_pkgs"
          android:inputType="textNoSuggestions|textMultiLine"
          android:gravity="top|start"
          android:overScrollMode="always"
          android:scrollbars="vertical" />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchImeVisibilityCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/label_floating_ime_visibility_compat" />

      <TextView
        android:id="@+id/tvImeVisibilityCompatDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/darker_gray"
        android:text="@string/desc_floating_ime_visibility_compat" />

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilImeVisibilityCompatPkgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:helperText="@string/hint_ime_visibility_compat_pkgs">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etImeVisibilityCompatPkgs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/label_ime_visibility_compat_pkgs"
          android:inputType="textNoSuggestions|textMultiLine"
          android:minLines="3"
          android:gravity="top|start"
          android:overScrollMode="always"
          android:scrollbars="vertical" />
      </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
  </ScrollView>

</LinearLayout>
