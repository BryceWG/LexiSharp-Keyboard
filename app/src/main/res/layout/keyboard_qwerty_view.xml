<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ime_panel_height"
    android:orientation="vertical"
    android:background="@drawable/bg_keyboard_container"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <!-- 工具条：输入文本暂存区和功能按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:minHeight="40dp">

        <!-- 收起键盘按钮 -->
        <ImageButton
            android:id="@+id/qwertyHideTop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_hide"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_down"
            android:tint="?attr/colorOnSurfaceVariant" />

        <!-- 输入文本暂存显示区域（左右分区，联动滚动） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_key_button"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:id="@+id/qwertyRawScroll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="none"
                android:overScrollMode="never">

                <TextView
                    android:id="@+id/qwertyTextBuffer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:text=""
                    android:hint="@string/hint_text_buffer"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8"
                    android:textSize="12sp"
                    android:maxLines="1" />

            </HorizontalScrollView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:alpha="0.3"
                android:background="?attr/colorOnSurfaceVariant" />

            <HorizontalScrollView
                android:id="@+id/qwertyConvScroll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="none"
                android:overScrollMode="never">

                <TextView
                    android:id="@+id/qwertyTextBufferConv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8"
                    android:textSize="12sp"
                    android:maxLines="1" />

            </HorizontalScrollView>

        </LinearLayout>

        <!-- 中文输入模式切换按钮 -->
        <TextView
            android:id="@+id/qwertyPinyin"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_pinyin_mode"
            android:gravity="center"
            android:text="@string/label_pinyin"
            android:clickable="true"
            android:focusable="true"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 行切换容器：在同一顶栏下切换 26 键与 123 符号，仅变化主要区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 26 键字母面板（默认可见） -->
        <LinearLayout
            android:id="@+id/qwertyLettersPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <!-- 第一行：qwertyuiop -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Use equal weights for keys -->
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="q" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="w" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="e" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="r" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="t" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="y" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="u" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="i" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="o" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="p" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
    </LinearLayout>

    <!-- 第二行：asdfghjkl -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="a" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="s" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="d" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="f" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="g" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="h" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="j" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="k" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="l" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
    </LinearLayout>

    <!-- 第三行：Shift + zxcvbnm + 退格 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/qwertyShift"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_shift_functional_button"
            android:contentDescription="@string/cd_shift"
            android:padding="8dp"
            android:src="@drawable/ic_shift"
            android:tint="@color/tint_shift_icon"
            android:scaleType="fitCenter" />
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="z" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="x" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="c" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="v" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="b" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="n" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button"
            android:text="m" android:textSize="20sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="letter_key"/>

        <ImageButton
            android:id="@+id/qwertyBackspace"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_key_functional_button"
            android:contentDescription="@string/cd_backspace"
            android:padding="6dp"
            android:src="@drawable/ic_backspace"
            android:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- 第四行：123 切换 / 收起 / 逗号  空格  句号 / 回车 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/qwertyNum"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_key_functional_button"
            android:contentDescription="@string/cd_symbols_keyboard"
            android:gravity="center"
            android:text="@string/label_123"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_key_button"
            android:gravity="center"
            android:text=","
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="20sp"
            android:tag="punct_key" />

        <TextView
            android:id="@+id/qwertySpace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_space"
            android:gravity="center"
            android:text="@string/label_space"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qwertyLangSwitch"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_lang_switch"
            android:gravity="center"
            android:text="@string/label_english_mode"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="20sp"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/qwertyEnter"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/bg_key_functional_button"
            android:contentDescription="@string/cd_enter"
            android:padding="6dp"
            android:src="@drawable/ic_enter"
            android:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

        </LinearLayout>

        <!-- 符号数字面板（默认隐藏） -->
        <LinearLayout
            android:id="@+id/qwertySymbolsPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- 第一行：数字 1-0 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="1" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="2" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="3" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="4" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="5" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="6" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="7" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="8" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="9" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="0" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
            </LinearLayout>

            <!-- 第二行：常见符号 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="-" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="/" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text=":" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text=";" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="(" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text=")" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="￥" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="@" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="&quot;" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="'" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
            </LinearLayout>

            <!-- 第三行：括号与特殊符号 + 退格 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="[" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="]" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="{" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="}" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="," android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="." android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="?" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="1dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="!" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
                <ImageButton
                    android:id="@+id/symBackspace"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/bg_key_functional_button"
                    android:contentDescription="@string/cd_backspace"
                    android:padding="6dp"
                    android:src="@drawable/ic_backspace"
                    android:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <!-- 第四行：ABC / 收起 / 空格 / 回车 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/symToLetters"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/bg_key_functional_button"
                    android:contentDescription="@string/cd_letters_keyboard"
                    android:gravity="center"
                    android:text="@string/label_abc"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/symHide"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/bg_key_button"
                    android:contentDescription="@string/cd_hide"
                    android:padding="6dp"
                    android:src="@drawable/ic_chevron_down"
                    android:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/symSpace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_key_button"
                    android:contentDescription="@string/cd_space"
                    android:gravity="center"
                    android:text="@string/label_space"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/symEnter"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/bg_key_functional_button"
                    android:contentDescription="@string/cd_enter"
                    android:padding="6dp"
                    android:src="@drawable/ic_enter"
                    android:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
