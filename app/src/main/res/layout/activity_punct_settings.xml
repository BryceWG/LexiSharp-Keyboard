<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titleCentered="true"
    app:title="@string/title_punct_settings" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="?attr/colorOnSurface"
      android:textStyle="bold"
      android:text="@string/custom_punct_section_title" />

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:boxBackgroundMode="outline"
      android:hint="@string/label_custom_punct_1">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPunct1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:inputType="text"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:boxBackgroundMode="outline"
      android:hint="@string/label_custom_punct_2">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPunct2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:inputType="text"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:boxBackgroundMode="outline"
      android:hint="@string/label_custom_punct_3">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPunct3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:inputType="text"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:boxBackgroundMode="outline"
      android:hint="@string/label_custom_punct_4">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPunct4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:inputType="text"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.divider.MaterialDivider
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:textColor="?attr/colorOnSurface"
      android:textStyle="bold"
      android:text="@string/label_speech_preset_section" />

    <Spinner
      android:id="@+id/spSpeechPresets"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp" />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/tilSpeechPresetName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="@string/hint_speech_preset_name"
      app:boxBackgroundMode="outline">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etSpeechPresetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/tilSpeechPresetContent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="@string/hint_speech_preset_content"
      app:boxBackgroundMode="outline">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etSpeechPresetContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:minLines="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:gravity="end"
      android:orientation="horizontal">

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpeechPresetDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="@string/btn_speech_preset_delete" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpeechPresetAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Widget.Material3.Button"
        android:text="@string/btn_speech_preset_add" />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
