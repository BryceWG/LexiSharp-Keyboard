<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_keyboard_container"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <!-- 第一行：数字 1-0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="1" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="2" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="3" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="4" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="5" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="6" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="7" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="8" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="9" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="0" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
    </LinearLayout>

    <!-- 第二行：常见符号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="-" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="/" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text=":" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text=";" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="(" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text=")" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="¥" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="&amp;" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="@" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="&quot;" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
    </LinearLayout>

    <!-- 第三行：更多符号 + 退格 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="'" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="," android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="?" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="!" android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:background="@drawable/bg_key_button" android:text="." android:textSize="18sp" android:textColor="?attr/colorOnSurfaceVariant" android:tag="sym_key"/>
        <ImageButton
            android:id="@+id/symBackspace"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_backspace"
            android:padding="6dp"
            android:src="@drawable/ic_backspace"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <!-- 第四行：ABC / 收起 / 空格 / 回车 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/symToLetters"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_letters_keyboard"
            android:gravity="center"
            android:text="@string/label_abc"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/symHide"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_hide"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_down"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/symSpace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_space"
            android:gravity="center"
            android:text="@string/label_space"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/symEnter"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_key_button"
            android:contentDescription="@string/cd_enter"
            android:padding="6dp"
            android:src="@drawable/ic_enter"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:stateListAnimator="@animator/key_button_state_list"
            android:tint="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

</LinearLayout>

