<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed: add a little elevation (shadow) and subtle scale -->
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="80"
                android:valueFrom="0"
                android:valueTo="6"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="80"
                android:valueFrom="1.0"
                android:valueTo="0.96"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="80"
                android:valueFrom="1.0"
                android:valueTo="0.96"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Default (released) -->
    <item>
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="120"
                android:valueFrom="6"
                android:valueTo="0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="120"
                android:valueFrom="0.96"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="120"
                android:valueFrom="0.96"
                android:valueTo="1.0"
                android:valueType="floatType" />
        </set>
    </item>
</selector>
